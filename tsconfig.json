{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                  
    "jsx": "react",                   
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,               
    "strict": true,                           
    "noUnusedLocals": true,                
    "noUnusedParameters": true,           
    "noImplicitReturns": true,            
    "moduleResolution": "node",
    "esModuleInterop": true 
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
